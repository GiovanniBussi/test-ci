#! /bin/bash
# cd ../../src ; tar cf - */*.h */*/*.h | tar xf - -C "$(DESTDIR)$(includedir)/$(program_name)/"

cd ../../src

where="$1"
shift

script=""
includedir=
dirs=$*

export LC_ALL=C

for dir in $dirs
do
for file in $dir/*.h
do
  if test -e $file ; then
    mkdir -p "$where/${file%/*}"
    awk '/^# *include *"[a-z][a-z]*\//{sub("^# *include *\"","#include \"../")}{print}' $file > "$where/$file"
  fi
done
done
