# this is just to test what happens when the value of the sw in 0 is != 1
c:   COORDINATION GROUPA=1 GROUPB=2 SWITCH={MATHEVAL R_0=1.3 D_MAX=2.6 FUNC=2/(1+x^6) NOSTRETCH}
cs:  COORDINATION GROUPA=1 GROUPB=2 SWITCH={CUSTOM R_0=1.3 D_MAX=2.6 FUNC=2/(1+x^6)}

PRINT ...
  ARG=c,cs
  FILE=COLVAR
... PRINT

DUMPDERIVATIVES ARG=c,cs FILE=deriv FMT=%8.4f

# this is just to test what happens when the value of the sw in 0 is infinite
# it is strongly down scaled to avoid numerical instabilities in the reference file
c1:   COORDINATION GROUPA=1 GROUPB=2 SWITCH={MATHEVAL R_0=1.3 D_MAX=2.6 FUNC=1e-4/x2 NOSTRETCH}
cs1:  COORDINATION GROUPA=1 GROUPB=2 SWITCH={CUSTOM R_0=1.3 D_MAX=2.6 FUNC=1e-4/x2}

PRINT ...
  ARG=c1,cs1
  FILE=COLVAR1
... PRINT

DUMPDERIVATIVES ARG=c1,cs1 FILE=deriv1 FMT=%8.4f

ENDPLUMED
